{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["airbnb-base", "prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "global-require": "off",
        "import/no-dynamic-require": "off",
        "no-plusplus": "off",
        "no-underscore-dangle": "off",
        "no-use-before-define": "off",
        "no-console": "off",
        "no-param-reassign": "off",
        "import/no-unresolved": "off"
    }
}
